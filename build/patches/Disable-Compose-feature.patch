+    deps += [
+      ":compose_optimization_guide_proto",
+    ]
+  }
+
   if (enable_compose) {
     sources += [
       "compose/chrome_compose_client.cc",
@@ -8422,7 +8428,6 @@ static_library("browser") {
     ]
 
     deps += [
-      ":compose_optimization_guide_proto",
